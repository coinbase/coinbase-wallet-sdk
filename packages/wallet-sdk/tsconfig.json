{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
  },
  "watchOptions": {
    // Use native file system events for files and directories
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "__tests__",
      "dist",
      "build",
      "**/*.test.*",
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "build",
    "**/*.test.*",
    "__tests__"
  ]
}
