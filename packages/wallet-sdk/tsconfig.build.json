{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      ":util/*": ["src/util/*"],
      ":core/*": ["src/core/*"]
    },
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": false,
  },
  "include": ["src"],
  "exclude": ["dist", "build", "**/*.test.*", "mocks"]
}
